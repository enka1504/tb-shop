{% style %}
  .hg {
    padding: 0 0 30px;
  }
  .hg__wrap {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 16px;
  }
  .hg__grid {
    display: grid;
    grid-template-columns: 1fr 2fr 1fr;
    gap: {{ section.settings.gap }}px;
  }
  .hg__card {
    border-radius: 18px;
    overflow: hidden;
    position: relative;
    min-height: 420px;
    display: grid;
    align-items: end;
    border: 1px solid rgba(0, 0, 0, 0.06);
  }
  .hg__bgimg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transform: scale(1.02);
  }
  .hg__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, rgba(0,0,0,.0) 0%, rgba(0,0,0,.35) 55%, rgba(0,0,0,.45) 100%);
  }
  .hg__content {
    position: relative;
    padding: 26px;
    color: #fff;
  }
  .hg__kicker {
    font-size: 13px;
    opacity: .9;
    margin-bottom: 8px;
    font-family: cursive;
  }
  .hg__title {
    font-size: clamp(24px, 2.2vw, 40px);
    font-weight: 800;
    line-height: 1.05;
    margin: 0 0 10px;
    font-family: cursive;
    font-size: 24px;
  }
  .hg__text {
    font-size: 14px;
    opacity: .95;
    margin: 0 0 16px;
    /* max-width: 48ch; */
    width: 100% !important;
    text-align: center;
  }
  .hg__btn {
    display: inline-block;
    background: #ffbf63;
    color: #1a1a1a;
    padding: 9px 14px;
    border-radius: 8px;
    text-decoration: none;
    font-family: cursive;
    color: #40808c;
  }
  .hg__badge {
    position: absolute;
    top: 18px;
    left: 18px;
    width: 56px;
    height: 56px;
    border-radius: 999px;
    background: #ffbf63;
    color: #003b73;
    font-weight: 900;
    display: grid;
    place-items: center;
    z-index: 2;
  }

  /* Center card tweaks */
  .hg__card--center .hg__content {
    text-align: center;
    align-items: center;
  }
  .hg__card--center .hg__content {
    padding-bottom: 36px;
  }
  .hg__card--center .hg__title span {
    color: #ffbf63;
  }

  @media (max-width: 980px) {
    .hg__grid {
      grid-template-columns: 1fr;
    }
    .hg__card {
      min-height: 360px;
    }
  }
{% endstyle %}

<section class="hg">
  <div class="hg__wrap">
    <div class="hg__grid">
      {% assign left = section.blocks | where: "type", "card_left" | first %}
      {% assign center = section.blocks | where: "type", "card_center" | first %}
      {% assign right = section.blocks | where: "type", "card_right" | first %}

      {% render 'hero-grid-card'
        , block: left
        , variant: 'left' %}
      {% render 'hero-grid-card'
        , block: center
        , variant: 'center' %}
      {% render 'hero-grid-card'
        , block: right
        , variant: 'right' %}
    </div>
  </div>
</section>


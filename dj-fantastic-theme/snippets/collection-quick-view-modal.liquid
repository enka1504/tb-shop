{%- comment -%} Right-side Quick View modal {%- endcomment -%}

<aside
  class="qv-modal"
  data-qv-modal
  hidden
  aria-hidden="true"
  role="dialog"
  aria-label="Quick view">
  <div class="qv-modal__panel" role="document">
    <button
      class="qv-close"
      type="button"
      aria-label="Close"
      data-qv-close>✕</button>
    <div class="qv-modal__content" data-qv-content>
      <div class="qv-loading">Loading…</div>
    </div>
  </div>
</aside>